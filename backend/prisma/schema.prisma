generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Merchant {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Product {
  id           String   @id @default(uuid())
  merchantId   String
  title        String
  description  String?
  imageUrl     String
  price        Int
  quantity     Int?
  supportEmail String
  supportPhone String
  createdAt    DateTime @default(now())
}

model PaymentLink {
  id        String   @id @default(uuid())
  productId String
  slug      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Payment {
  id            String   @id @default(uuid())
  productId     String
  customerName  String
  customerEmail String
  momoNumber    String
  amount        Int
  status        PaymentStatus @default(PENDING)
  externalRef   String?
  createdAt     DateTime @default(now())
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
