generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model Merchant {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  products     Product[]
  paymentLinks PaymentLink[]
}

model Product {
  id           String   @id @default(uuid())
  merchantId   String
  title        String
  description  String?
  imageUrl     String
  price        Int
  quantity     Int?
  supportEmail String
  supportPhone String
  createdAt    DateTime @default(now())

  merchant     Merchant     @relation(fields: [merchantId], references: [id])
  paymentLinks PaymentLink[]
}

model PaymentLink {
  id         String   @id @default(uuid())
  productId  String
  merchantId String
  slug       String   @unique
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())

  merchant Merchant @relation(fields: [merchantId], references: [id])
  product  Product  @relation(fields: [productId], references: [id])
  payments Payment[]
}

model Payment {
  id            String        @id @default(uuid())
  paymentLinkId String
  customerName  String
  customerEmail String
  momoNumber    String
  amount        Int
  status        PaymentStatus @default(PENDING)
  externalRef   String?
  createdAt     DateTime      @default(now())

  paymentLink PaymentLink @relation(fields: [paymentLinkId], references: [id])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
